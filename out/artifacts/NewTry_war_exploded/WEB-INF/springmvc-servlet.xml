<?xml version="1.0" encoding="UTF-8"?>

<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        ">
    <bean name="/product"
          class="classes.NewTry.controller.InputProductController"/>
    <bean name="/product_save.action"
          class="classes.NewTry.controller.SaveProductController"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>     <!-- 支持JSTL -->
        <property name="prefix" value="WEB-INF/jsp/" />     <!-- 模板的路径 -->
        <property name="suffix" value=".jsp" />                 <!-- 模板文件的后缀-->
    </bean>
</beans>